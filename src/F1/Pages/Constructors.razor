@page "/constructors/{Year:int?}"
@using F1.Services

<PageTitle>Constructor's Standings @year</PageTitle>

<MudStack Justify="Justify.SpaceBetween" Class="pb-2" Row>
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="BackAsync" />
    <MudText Typo="Typo.h4">Constructor's Standings @year</MudText>
    <MudIconButton Icon="@Icons.Material.Filled.ArrowForward" OnClick="ForwardAsync" />
</MudStack>

@if (constructorStandingsTableResponse is not null)
{
    <div class="relative flex-1">
        <MudSimpleTable Class="fill-parent" Dense Hover FixedHeader>
            <thead>
                <tr>
                    <th style="text-align:center">Position</th>
                    <th style="text-align:center">Constructor</th>
                    <th style="text-align:center">Wins</th>
                    <th style="text-align:center">Points</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var constructorStandind in constructorStandingsTableResponse.MRData.StandingsTable.StandingsLists.FirstOrDefault()?.ConstructorStandings ?? [])
                {
                    <tr>
                        <td style="text-align:center">@constructorStandind.PositionText</td>
                        <td style="text-align:center">@constructorStandind.Constructor.Name</td>
                        <td style="text-align:center">@constructorStandind.Wins</td>
                        <td style="text-align:center">@constructorStandind.Points</td>
                    </tr>
                }
            </tbody>
        </MudSimpleTable>
    </div>
}

@code {
    private Response<StandingsTableMRData<ConstructorStandingsList>>? constructorStandingsTableResponse;
    private int year;

    [Parameter]
    public int? Year { get; set; }

    [Inject]
    private F1Service F1Service { get; init; } = default!;

    [Inject]
    private NavigationManager NavigationManager { get; init; } = default!;

    protected override async Task OnInitializedAsync()
    {
        year = Year ?? DateTime.Now.Year;
        await GetDataAsync();
    }

    private async Task GetDataAsync()
    {
        NavigationManager.NavigateTo($"constructors/{year}");
        constructorStandingsTableResponse = await F1Service.GetConstructorStandingsTableAsync(year);
    }

    private async Task BackAsync()
    {
        year--;
        await GetDataAsync();
    }

    private async Task ForwardAsync()
    {
        year++;
        await GetDataAsync();
    }
}
